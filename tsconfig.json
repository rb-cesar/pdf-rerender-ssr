{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "ts-node": {
    "files": true
  },
  "lib": ["esnext"],
  "outDir": "./build",
  "rootDir": "./src",
  "compileOnSave": true,
  "include": ["src", "**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules"]
}
